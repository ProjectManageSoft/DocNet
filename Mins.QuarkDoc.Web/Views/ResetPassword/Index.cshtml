    <script>
        $(document).ready(function () {
            var validator = $("#ResetPwdForm").validate({
                submitHandler: function () {
                    Reset();
                }
            });
        });
        function Reset() {
            var email = $("#email").val()
            var password = $("#password").val()
            var newPassword = $("#newPassword").val()
            $.ajax({
                type: "POST",
                url: "/ResetPassword/Reset",
                data: { email: email, newPassword: newPassword, password: password },
                success: function (result) {
                    if (result == "True") {
                        $.sw("success-message", "密码修改成功!", function () {
                            location.reload();
                        });
                    } else {
                        $.sw("error-message", "密码修改失败!", null);
                    }
                }
            });
        }
    </script>
